<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a2048_2.MainActivity" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#574336"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/score"
            android:textSize="36sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/currentScore"
            android:textSize="36sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#574336"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bestScore"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/bestScore"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.example.a2048_2.GameView
        android:id="@+id/gameView"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:layout_weight="1"></com.example.a2048_2.GameView>

    <ImageView
        android:id="@+id/img_duck"
        android:layout_width="176dp"
        android:layout_height="136dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/test"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ly_btns"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ddada0"
        >
        <Button
            android:id="@+id/btn_restart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="重新开始"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_phb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="排行榜"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:onClick="onClick"/>
        <Button
        android:id="@+id/btn_quit"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="退出游戏"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:onClick="onClick"/>
    </LinearLayout>
</LinearLayout>